<Page x:Class="AgroLink._404"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AgroLink"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="_404">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Erreur 404 - Utilisateur non trouvé" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Image Source="path_to_your_image.jpg" Width="100" Height="100" Margin="0,0,0,20"/>
            <TextBlock Text="Désolé, l'utilisateur que vous recherchez n'a pas été trouvé." TextWrapping="Wrap" HorizontalAlignment="Center"/>
            <Button Content="Retour à la page d'accueil" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"
                    Click="BackToHomePage_Click"/>
        </StackPanel>
    </Grid>
</Page>
