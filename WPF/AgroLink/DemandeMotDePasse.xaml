<Window x:Class="AgroLink.DemandeMotDePasse"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgroLink"
        mc:Ignorable="d"
        Title="DemandeMotDePasse" Height="150" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Entrez le mot de passe :" VerticalAlignment="Top"/>
            <PasswordBox x:Name="MotDePasseBox" Margin="0,10,0,10"/>
            <Button Content="Valider" Click="Valider_Click"/>
        </StackPanel>
    </Grid>
</Window>
